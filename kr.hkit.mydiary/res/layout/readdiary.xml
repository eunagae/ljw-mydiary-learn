<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/read_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/read_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/read_title_tv"
                    android:layout_alignBottom="@+id/read_title_tv"
                    android:layout_alignParentRight="true"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:id="@+id/read_imglayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/read_img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mOnClick"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/read_img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mOnClick"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/read_img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mOnClick"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/read_imglayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/read_img4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mOnClick"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/read_img5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mOnClick"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/read_img6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mOnClick"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <View
                android:id="@+id/read_sepataor_img"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="30dp" >

                <TextView
                    android:id="@+id/read_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:id="@+id/read_mp3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/read_albumart_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/common_signin_btn_icon_normal_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/read_mp3_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large Text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/read_mp3_singer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small Text"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/read_mp3_stop_btn"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.99"
                        android:src="@android:drawable/ic_media_pause" />

                    <ImageButton
                        android:id="@+id/read_mp3_play_btn"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_media_play" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/read_separator_mp3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:id="@+id/read_addr_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/read_addr_tv"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Large Text" />

                <ImageButton
                    android:id="@+id/read_go_map"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_dialog_map" />
            </LinearLayout>

            <View
                android:id="@+id/read_separator_addr"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:id="@+id/read_url_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/read_url_tv"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Large Text"
                    android:textColor="#0000ff" />

                <ImageButton
                    android:id="@+id/read_go_url"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_menu_search" />
            </LinearLayout>

            <View
                android:id="@+id/read_separator_url"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCDCDC" />
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>
