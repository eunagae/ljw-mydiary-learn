<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imagepicker_ImageView1"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:onClick="mOnClick" />

        <ImageView
            android:id="@+id/imagepicker_ImageView2"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:onClick="mOnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imagepicker_ImageView3"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:onClick="mOnClick" />

        <ImageView
            android:id="@+id/imagepicker_ImageView4"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:onClick="mOnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imagepicker_ImageView5"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:onClick="mOnClick" />

        <ImageView
            android:id="@+id/imagepicker_ImageView6"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:onClick="mOnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center_horizontal"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/imagepicker_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/imagepicker_submit" />

    </LinearLayout>

</LinearLayout>